{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "s3:*",
            "Resource": ["arn:aws:s3:::mybucket/*"]
        },
		{
            "Sid": "NoBucketDelete",
            "Effect": "Deny",
            "Action": [
                "s3:DeleteBucket",
                "s3:DeleteBucketPolicy",
                "s3:DeleteBucketWebsite",
                 "s3:DeleteObjectVersion"
            ],
            "Resource": [
                "arn:aws:s3:::mybucket"
            ]
        }
    ]
}